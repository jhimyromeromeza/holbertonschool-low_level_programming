CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME:school
RM:rm
CFLAGS:-Wall -Werror -Wextra -pedantic

all:$(NAME)

$NAME:$(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

%.o:%.c
	$(CC) -c $< -o $@

clean:
	$(RM) -f *~ *# $(OBJ) $(NAME)
	$(RM) -f *.c *.o $(OBJ)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f $(NAME)

re: fclean all
